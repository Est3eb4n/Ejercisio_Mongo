db.productos.updateOne(
    //query
    {_id: ObjectId('654a7c051f0bf1efd9ebbed0')},

    //operaciones de actualización
    {
        $set: {
            nombre: "Prod. 5",
            "tag": ['A', 'B', 'C']},
        $inc: {
            precio: -100,
        }
    }
)

